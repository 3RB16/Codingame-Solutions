void solve(){
stack <int>st;
int n ,x;
cin >> n;
int a[n];
    pas s;
for(int i =0 ; i < n ;i++){
    cin >> x;
    s.push(x);
}
int y = 0 , sum = 0;
    while (s.size() > 1){
        y+=s.top();
        s.pop();
        y+=s.top();
        s.pop();
        s.push(y);
        sum+=y;
        y=0;
    }
    cout << sum<<ll;
}
